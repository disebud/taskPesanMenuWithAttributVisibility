<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstLayout"
       android:layout_gravity="center_vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       android:orientation="vertical">

       <ImageView
           android:layout_gravity="center_horizontal"
           android:layout_marginBottom="20dp"
           android:id="@+id/imageView"
           android:layout_width="200dp"
           android:layout_height="200dp"
           app:srcCompat="@drawable/logo_food" />


       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
       <Button
           android:id="@+id/btn_table_1"
           android:layout_width="wrap_content"
           android:layout_height="100dp"
           android:text="MEJA 1"
           android:onClick="ButtonClicked"
           android:textSize="20sp"
           android:textStyle="bold"
           android:layout_margin="10dp"
           android:layout_weight="1"
           />

           <Button
               android:id="@+id/btn_table_2"
               android:layout_width="wrap_content"
               android:layout_height="100dp"
               android:text="MEJA 2"
               android:onClick="ButtonClicked"
               android:backgroundTint="@color/cardview_dark_background"
               android:textSize="20sp"
               android:textStyle="bold"
               android:layout_margin="10dp"
               android:layout_weight="1"
               />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <Button
               android:id="@+id/btn_table_3"
               android:layout_width="wrap_content"
               android:layout_height="100dp"
               android:text="MEJA 3"
               android:onClick="ButtonClicked"
               android:backgroundTint="@color/cardview_dark_background"
               android:textSize="20sp"
               android:textStyle="bold"
               android:layout_margin="10dp"
               android:layout_weight="1"
               />

           <Button
               android:id="@+id/btn_table_4"
               android:layout_width="wrap_content"
               android:layout_height="100dp"
               android:text="MEJA 4"
               android:onClick="ButtonClicked"
               android:textSize="20sp"
               android:textStyle="bold"
               android:layout_margin="10dp"
               android:layout_weight="1"
               />
       </LinearLayout>

   </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:text="INPUT PESANAN"/>

        <TextView
            android:id="@+id/meja_x_layout_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="MEJA X"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Nama Menu" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
              android:textStyle="bold"
                android:text="Harga" />

            <TextView
                android:layout_width="12dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Jumlah" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pesan_menu1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nama Menu" />

            <EditText
                android:id="@+id/et_harga_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:inputType="number"
                android:hint="Rp.000" />

            <EditText
                android:id="@+id/et_jlh_1"
                android:layout_width="3dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="0" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pesan_menu2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nama Menu"  />

            <EditText
                android:id="@+id/et_harga_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:inputType="number"
                android:hint="Rp.000"  />

            <EditText
                android:id="@+id/et_jlh_2"
                android:layout_width="3dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="0" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_pesan_menu3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Nama Menu" />

            <EditText
                android:id="@+id/et_harga_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:inputType="number"
                android:hint="Rp.000"  />

            <EditText
                android:id="@+id/et_jlh_3"
                android:layout_width="3dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="0" />



        </LinearLayout>

        <Button
            android:id="@+id/btn_hitung"
            android:layout_marginTop="30dp"
            android:onClick="ButtonClicked"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HITUNG"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="PESANAN"/>

        <TextView
            android:id="@+id/meja_x_layout_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="MEJA X"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:text="Nama Makanan" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Harga" />

            <TextView
                android:layout_width="12dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Jumlah" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pesan_menu1"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menu 1"
                />

            <TextView
                android:id="@+id/tv_harga_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="xxxxxxxxxx" />

            <TextView
                android:id="@+id/tv_jlh_1"
                android:layout_width="3dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="0" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jlh_menu_1"
                android:layout_width="3dp"
                android:paddingEnd="18dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pesan_menu2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menu 2"
                />

            <TextView
                android:id="@+id/tv_harga_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="xxxxxxxxxx" />

            <TextView
                android:id="@+id/tv_jlh_2"
                android:layout_width="3dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="0" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jlh_menu_2"
                android:layout_width="3dp"
                android:paddingEnd="18dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pesan_menu3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menu 3"
                />

            <TextView
                android:id="@+id/tv_harga_3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="xxxxxxxxxx" />

            <TextView
                android:id="@+id/tv_jlh_3"
                android:layout_width="3dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="0" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jlh_menu_3"
                android:layout_width="3dp"
                android:paddingEnd="18dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0" />

        </LinearLayout>

        <View
            android:layout_width="380dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="3dp"
                android:paddingEnd="18dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Total :" />

            <TextView
                android:id="@+id/tv_grand_total"
                android:layout_width="3dp"
                android:paddingEnd="18dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_back_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:onClick="ButtonClicked"
                android:text="EDIT" />

            <Button
                android:id="@+id/btn_main_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:onClick="ButtonClicked"
                android:text="HOME" />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>