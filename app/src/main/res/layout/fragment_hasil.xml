<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mejaLayout3"
            type="String" />

        <variable
            name="productSatu3"
            type="com.example.apptaskfinal.Product" />
        <variable
            name="productDua3"
            type="com.example.apptaskfinal.Product" />
        <variable
            name="productTiga3"
            type="com.example.apptaskfinal.Product" />

        <variable
            name="jumlahTotal3"
            type="Integer" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HasilFragment">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:id="@+id/thirdLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:text="PESANAN" />

            <TextView
                android:id="@+id/meja_x_layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@{mejaLayout3}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:text="Nama Makanan" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="Harga" />

                <TextView
                    android:layout_width="12dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Jumlah" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pesan_menu1"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:text="@{productSatu3.nama}"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_harga_1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(productSatu3.harga)}"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_jlh_1"
                    android:layout_width="3dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(productSatu3.jumlah)}"
                    android:layout_weight="5" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jlh_menu_1"
                    android:layout_width="3dp"
                    android:paddingEnd="18dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="16sp"
                    android:text="@{String.valueOf(productSatu3.total)}"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pesan_menu2"
                    android:layout_width="220dp"
                    android:text="@{productDua3.nama}"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_harga_2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(productDua3.harga)}"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv_jlh_2"
                    android:layout_width="3dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@{String.valueOf(productDua3.jumlah)}"
                />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jlh_menu_2"
                    android:layout_width="3dp"
                    android:paddingEnd="18dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="16sp"
                    android:text="@{String.valueOf(productDua3.total)}"
                    android:textStyle="bold"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pesan_menu3"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{productTiga3.nama}"
                  />

                <TextView
                    android:id="@+id/tv_harga_3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{String.valueOf(productTiga3.harga)}"
               />

                <TextView
                    android:id="@+id/tv_jlh_3"
                    android:layout_width="3dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="@{String.valueOf(productTiga3.jumlah)}"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jlh_menu_3"
                    android:layout_width="3dp"
                    android:paddingEnd="18dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="16sp"
                    android:text="@{String.valueOf(productTiga3.total)}"
                    android:textStyle="bold"
               />

            </LinearLayout>

            <View
                android:layout_width="380dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="3dp"
                    android:paddingEnd="18dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Total :" />

                <TextView
                    android:id="@+id/tv_grand_total"
                    android:layout_width="3dp"
                    android:paddingEnd="18dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="20sp"
                    android:text="@{String.valueOf(jumlahTotal3)}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_back_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:text="EDIT" />

                <Button
                    android:id="@+id/btn_main_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:text="HOME" />


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>
</layout>